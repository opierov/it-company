<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.dao.ConsultantMapper">

    <resultMap id="ConsultantResultMap" type="org.example.models.Consultant">
        <id property="id" column="id"/>
        <result property="firstName" column="first_name"/>
        <result property="lastName" column="last_name"/>
        <result property="salary" column="salary"/>
        <result property="industry" column="industry"/>
        <result property="managerId" column="managers_id"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO consultants (first_name, last_name, salary, industry, managers_id)
        VALUES (#{firstName}, #{lastName}, #{salary}, #{industry}, #{managerId})
    </insert>

    <select id="getById" resultMap="ConsultantResultMap">
        SELECT * FROM consultants WHERE id = #{id}
    </select>

    <select id="getAll" resultMap="ConsultantResultMap">
        SELECT * FROM consultants
    </select>

    <update id="update">
        UPDATE consultants
        SET first_name = #{firstName}, last_name = #{lastName}, salary = #{salary},
        industry = #{industry}, managers_id = #{managerId}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM consultants WHERE id = #{id}
    </delete>

    <select id="getByIndustry" resultMap="ConsultantResultMap">
        SELECT * FROM consultants WHERE industry = #{industry}
    </select>

</mapper>